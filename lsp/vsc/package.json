{
	"name": "calc-lsp",
	"description": "Calc language server",
	"author": "Siris",
	"displayName": "Calc language support",
	"license": "MIT",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/Chronostasys/calc"
	},
	"publisher": "Siris-calc",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:calc"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {},
		"languages": [
			{
				"id": "calc",
				"extensions": [
					".calc"
				]
			}
		],
		"grammars": [
			{
				"language": "calc",
				"scopeName": "source.calc",
				"path": "./syntaxes/calc.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile ",
		"compile": "tsc -b && go build -o ./client/out/lsp.exe ../main.go && go build -o ./client/out/lsp-debug.exe -gcflags=\"all=-N -l\" ../main.go",
		"watch": "go build -o ./client/out/lsp.exe ../main.go && go build -o ./client/out/lsp-debug.exe -gcflags=\"all=-N -l\" ../main.go && tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2"
	}
}